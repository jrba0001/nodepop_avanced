<% include header2.html %>

<div class="container">
      <section class="advertisements-form">
        <h4><%= __('Create an Advertisement!') %></h4>
        <form action="/upload" method='POST'enctype='multipart/form-data' id="form">
          <div class="row">
            <div class="col-sm-12 col-md-6">
              <div class="form-group">
                <label for="name"><%= __('Name') %></label>
                <input type="text" class="form-control" id="name" name="name" placeholder="<%= __('e.g.') %> Bici">
              </div>
              <div class="tags-list">
                <div class="ui-status empty">
                    <%= __('There is no tags') %>
                </div>
                <div class="ui-status error">
                    <%= __('Oops... This is embarasing, there has been an error') %>
                </div>
                <div class="ui-status loading">
                    <%= __('Loading...')%>
                </div>
                <div class="ui-status ideal"></div>
              </div>
            </div>

            <div class="col-sm-12 col-md-6">
              <div class="form-group">
                <label for="price"><%= __('Price') %></label>
                <input type="number" class="form-control" id="price" name="price" placeholder="<%= __('e.g.') %> 230">
              </div>
              <div class="form-group">
                <label for="photo"><%= __('Photo') %></label>
                <input type="file" class="" id="photo" name="imagen" placeholder="<%= __('e.g.') %> 230">
              </div>

              <div class="col-sm-6">
                <div class="checkbox">
                  <label>
                    <input type="radio" name="isSale" value="true" checked> <%= __('Se vende!') %>
                  </label>
                </div>
              </div>
              <div class="col-sm-6">
                <div class="checkbox">
                  <label>
                    <input type="radio" name="isSale" value="false"> <%= __('Se busca!') %>
                  </label>
                </div>
              </div>
            </div>

          </div>
          <div class="row">
            <div class="col-sm-12 col-md-6">
              <button type="submit" class="btn btn-primary" id="create-button"><%= __('Crear') %></button>
            </div>
          </div>
        </form>
      </section>